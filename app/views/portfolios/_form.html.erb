<%= form_for(@portfolio_item) do |form| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do|error| %>
      <%= js add_gritter(error, title: "Kee Cha's Portfolio", sticky: false) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image <%= form.file_field :main_image, style: 'display:none' %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image <%= form.file_field :thumb_image, style: 'display:none' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>

  <hr>

  <h2>Technologies Use:</h2>
  <div>
    <%= form.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
    <% end %>
  </div>
  <div>
    <%= link_to_add_association 'Add Technology', form, :technologies %>
  </div>
  <div class="form-group">
    <%= form.submit "Save Portfolio Item", class: 'btn btn-primary btn-block mt-2' %>
  </div>
<% end %>